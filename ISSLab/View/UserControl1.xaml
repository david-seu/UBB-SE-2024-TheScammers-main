<UserControl x:Class="ISSLab.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISSLab.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="100" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">
            <Border.Background>
                <ImageBrush Stretch="Fill" ImageSource="../Resources/Images/Dorian.jpeg" />
            </Border.Background>
        </Border>
        <Label Content="{}" Grid.Row="0" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
        <Label Content="5 Stars" Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
